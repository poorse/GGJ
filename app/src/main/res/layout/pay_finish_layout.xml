<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_title_include">

    </include>

    <ImageView
        android:layout_marginTop="@dimen/x150"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_finish"
        android:background="@drawable/icon_finish"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100" />

    <TextView
        android:id="@+id/tv_finish"
        android:layout_marginTop="@dimen/x20"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_finish"
        android:text="付款成功"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_return"
        android:layout_marginTop="@dimen/x30"
        android:textColor="@color/white"
        android:text="返回主界面"
        android:background="@drawable/btn_next_square"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_below="@id/tv_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40" />

</RelativeLayout>